{
  "name": "parade",
  "version": "0.1.0",
  "description": "Workflow orchestrator for Claude Code - from idea to implementation via Beads",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "vite",
    "dev:web": "concurrently \"vite --config vite.config.web.ts\" \"tsx watch src/server/index.ts\"",
    "build": "tsc && vite build && electron-builder",
    "build:web": "vite build --config vite.config.web.ts",
    "build:server": "tsc -p tsconfig.server.json",
    "build:web:all": "npm run build:web && npm run build:server",
    "start:web": "node dist/server/server/index.js",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.11",
    "@anthropic-ai/sdk": "^0.26.0",
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/sortable": "^8.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.15",
    "@xyflow/react": "^12.10.0",
    "better-sqlite3": "^11.10.0",
    "chokidar": "^3.6.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "dagre": "^0.8.5",
    "express": "^5.2.1",
    "js-yaml": "^4.1.1",
    "lucide-react": "^0.562.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^6.26.0",
    "rehype-highlight": "^7.0.2",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7",
    "ws": "^8.19.0",
    "zod": "^3.23.0",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@electron/notarize": "^3.1.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/better-sqlite3": "^7.6.8",
    "@types/cors": "^2.8.19",
    "@types/dagre": "^0.7.53",
    "@types/express": "^5.0.6",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.11.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^4.3.0",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "autoprefixer": "^10.4.17",
    "concurrently": "^9.2.1",
    "electron": "^31.0.0",
    "electron-builder": "^24.13.0",
    "happy-dom": "^20.0.11",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.21.0",
    "typescript": "^5.5.0",
    "vite": "^5.4.0",
    "vite-plugin-electron": "^0.28.0",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vitest": "^4.0.16"
  },
  "build": {
    "appId": "com.parade.app",
    "productName": "Parade",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "!**/.beads/**",
      "!**/discovery.db*",
      "!**/.claude/**",
      "!**/.docs/**",
      "!**/.design/**"
    ],
    "extraResources": [
      {
        "from": ".claude/skills",
        "to": "skills",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": ".claude/templates",
        "to": "templates",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg"
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "notarize": false
    },
    "afterSign": "build/notarize.js",
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
